{erl_opts, [debug_info]}.

{deps, [
  {emysql, "0.4.1"}
]}.


{relx, [
  {release, {emysql_orm, "0.0.1"}, [
    crypto,
    emysql,
    emysql_orm
  ]},
  {sys_config_src, "config/sys.config.src"},
  {vm_args_src, "config/vm.args.src"},
  {dev_mode, true},
  {include_src, true},
  {include_erts, false},
  {extended_start_script, true}]
}.

{shell, [{apps, [crypto, emysql, emysql_orm]}]}.

{minimum_otp_vsn, "22"}.

{plugins, [rebar3_hex]}.